--The Pads
SELECT 
CONCAT(NAME,'(',LEFT(OCCUPATION,1),')') AS SAMPLE
FROM OCCUPATIONS
ORDER BY NAME;
    
    
SELECT 
CONCAT('There are a total of ',CNT,' ',LOWER(OCCUPATION),'s.') AS SAMPLE
FROM (  SELECT
    OCCUPATION , COUNT(*) AS CNT
    FROM OCCUPATIONS
    GROUP BY 1) CNT_OCC
ORDER BY CNT , OCCUPATION;